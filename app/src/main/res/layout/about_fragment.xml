<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryy">

   <LinearLayout
       android:paddingTop="20dp"
       android:paddingBottom="20dp"
       android:orientation="vertical"
       android:gravity="center"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <ImageView
           android:src="@mipmap/logo_hify"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

       <TextView
           android:layout_marginTop="10dp"
           android:textSize="32sp"
           android:textColor="@color/white"
           android:text="SA Alcoholism \n Free Foundation"
           android:textAlignment="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

       <TextView
           android:layout_marginTop="5dp"
           android:textSize="16sp"
           android:text="beta5"
           android:textColor="@color/colorAccentt"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

       <android.support.v7.widget.CardView
           app:cardBackgroundColor="@color/cardview_dark_background"
           android:layout_margin="10dp"
           app:cardUseCompatPadding="true"
           app:cardCornerRadius="4dp"
           app:cardPreventCornerOverlap="true"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:paddingBottom="10dp"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:padding="10dp"
                   android:textSize="18sp"
                   android:textColor="#FFF"
                   android:text="Author"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />

               <View
                   android:background="#818181"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"/>

               <LinearLayout
                   android:clickable="true"
                   android:focusable="true"
                   android:foreground="?selectableItemBackground"
                   android:padding="10dp"
                   android:layout_marginTop="5dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:src="@drawable/ic_person_outline_black_24dp"
                       android:layout_width="24dp"
                       android:layout_height="24dp"/>

                   <TextView
                       android:textColor="#FFF"
                       android:textSize="18sp"
                       android:layout_marginStart="10dp"
                       android:text="@string/author_name"
                       android:gravity="center_vertical"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent" />

               </LinearLayout>

               <LinearLayout
                   android:id="@+id/website"
                   android:clickable="true"
                   android:focusable="true"
                   android:foreground="?selectableItemBackground"
                   android:padding="10dp"
                   android:layout_marginTop="5dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:src="@drawable/ic_public_white_24dp"
                       android:layout_width="24dp"
                       android:layout_height="24dp"/>

                   <TextView
                       android:textColor="#FFF"
                       android:textSize="18sp"
                       android:layout_marginStart="10dp"
                       android:text="Visit our website for more info"
                       android:gravity="center_vertical"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent" />

               </LinearLayout>

               <LinearLayout
                   android:id="@+id/email"
                   android:clickable="true"
                   android:focusable="true"
                   android:foreground="?selectableItemBackground"
                   android:padding="10dp"
                   android:layout_marginTop="5dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:src="@drawable/ic_email_white_24dp"
                       android:layout_width="24dp"
                       android:layout_height="24dp" />

                   <TextView
                       android:textColor="#FFF"
                       android:textSize="18sp"
                       android:layout_marginStart="10dp"
                       android:text="Send us an email"
                       android:gravity="center_vertical"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent" />

               </LinearLayout>

               <LinearLayout
                   android:id="@+id/instagram"
                   android:clickable="true"
                   android:focusable="true"
                   android:foreground="?selectableItemBackground"
                   android:padding="10dp"
                   android:layout_marginTop="5dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:src="@drawable/instagram"
                       android:tint="#FFF"
                       android:layout_width="24dp"
                       android:layout_height="24dp" />

                   <TextView
                       android:textColor="#FFF"
                       android:textSize="18sp"
                       android:layout_marginStart="10dp"
                       android:text="Follow us on Instagram"
                       android:gravity="center_vertical"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent" />

               </LinearLayout>

               <LinearLayout
                   android:id="@+id/google"
                   android:clickable="true"
                   android:focusable="true"
                   android:foreground="?selectableItemBackground"
                   android:padding="10dp"
                   android:layout_marginTop="5dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:src="@drawable/google_plus"
                       android:tint="#FFF"
                       android:layout_width="24dp"
                       android:layout_height="24dp" />

                   <TextView
                       android:textColor="#FFF"
                       android:textSize="18sp"
                       android:layout_marginStart="10dp"
                       android:text="Add us to your circles"
                       android:gravity="center_vertical"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent" />

               </LinearLayout>


           </LinearLayout>

       </android.support.v7.widget.CardView>

   </LinearLayout>

</ScrollView>
