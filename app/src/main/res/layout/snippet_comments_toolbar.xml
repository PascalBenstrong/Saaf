<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <android.support.v7.widget.Toolbar
            android:id="@+id/profileToolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/add_comment"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_add_black_24dp"/>

                <com.github.ivbaranov.mfb.MaterialFavoriteButton
                    android:id="@+id/like_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:mfb_not_favorite_image="@drawable/ic_favorite_border_black_24dp"
                    app:mfb_favorite_image="@drawable/ic_favorite_red_24dp"
                    />

                <!--com.github.ivbaranov.mfb.MaterialFavoriteButton
                    android:id="@+id/heart"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    app:mfb_not_favorite_image="@drawable/ic_favorite_border_black_24dp"
                    app:mfb_favorite_image="@drawable/ic_favorite_red_24dp"
                    app:mfb_animate_favorite="true"
                    app:mfb_animate_unfavorite="true"/-->

                <TextView
                    android:id="@+id/likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="50dp"
                    android:background="@null"
                    android:hint="0"
                    android:padding="2dp"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/comment_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_toRightOf="@id/likes"
                    android:src="@drawable/ic_comment_liked"/>

                <TextView
                    android:id="@+id/commented"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/comment_icon"
                    android:background="@null"
                    android:hint="12"
                    android:padding="2dp"
                    android:textSize="14sp"/>

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

</merge>